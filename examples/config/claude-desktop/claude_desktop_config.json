{
  "mcpServers": {
    "composite": {
      "command": "uv",
      "args": ["run", "--directory", "/path/to/mcp-servers/src/composite", "fastmcp", "run", "src/composite/server.py:mcp"]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/username/.mcp-servers"
      ]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "shell": {
      "command": "uv",
      "args": ["run", "--directory", "/path/to/mcp-servers/src/shell", "python", "-m", "shell"],
      "env": {
        "ALLOWED_COMMANDS": "ls,cat,grep,find,git,python,uv,node,npm,npx"
      }
    }
  }
}
