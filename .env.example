# MCP Servers Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required for specific servers)
# =============================================================================

# OpenAI API Key (used by: o3, vectorstore)
OPENAI_API_KEY=

# Google/Gemini API Key (used by: nano-banana)
GEMINI_API_KEY=

# Dify API Keys (used by: dify)
DIFY_API_KEY=
DIFY_CONSOLE_API_KEY=

# =============================================================================
# API Configuration
# =============================================================================

# Dify API URLs
DIFY_BASE_URL=https://api.dify.ai/v1
DIFY_CONSOLE_BASE_URL=https://api.dify.ai

# OpenAI Model Configuration
O3_MODEL=o3
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Browser Server Configuration
# =============================================================================

# Run browser in headless mode (true/false)
HEADLESS=true

# Browser timeouts (milliseconds)
BROWSER_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000

# Disable browser sandbox (required in some Docker environments)
NO_SANDBOX=false

# =============================================================================
# Vector Store Configuration
# =============================================================================

# Embedding provider: openai or default (ChromaDB)
EMBEDDING_TYPE=openai

# ChromaDB storage path
CHROMA_PATH=./chroma_data

# =============================================================================
# Preview Server Configuration
# =============================================================================

# HTTP server for serving pages (separate from MCP port)
HTTP_PORT=3000
HTTP_HOST=localhost

# =============================================================================
# Data Analysis Configuration
# =============================================================================

# Query history settings
DATA_ANALYSIS_MAX_RESULT_SIZE=1048576
DATA_ANALYSIS_MAX_HISTORY_SIZE=100
DATA_ANALYSIS_CLEANUP_FREQUENCY=10

# =============================================================================
# Composite Server Configuration
# =============================================================================

# Path to composite server configuration
COMPOSITE_CONFIG=composite-config.yaml

# =============================================================================
# Skills
# =============================================================================

# Path to skills config file (default: ./skills.yaml)
SKILLS_CONFIG=

